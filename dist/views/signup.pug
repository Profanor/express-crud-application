extends layout

block content
  .container(style="text-align: center; margin-top: 50px; width: 50%; margin: 0px auto; background-color: #f0f0f0; padding: 20px; border-radius: 10px;")
    h2(style="color: #007BFF;") Sign Up

    form(action="/signup", method="post", style="margin-top: 20px;")
      .form-group
        label(for="fullname", style="display: block; margin-bottom: 8px; color: #333;") Full Name:
        input(type="text", name="fullname", required, style="width: 80%; max-width: 300px; padding: 8px; margin-bottom: 16px; border: none;")

      .form-group
        label(for="email", style="display: block; margin-bottom: 8px; color: #333;") Email:
        input(type="email", name="email", required, style="width: 80%; max-width: 300px; padding: 8px; margin-bottom: 16px; border: none;")

      .form-group
        label(for="password", style="display: block; margin-bottom: 8px; color: #333;") Password:
        input(type="password", name="password", required, style="width: 80%; max-width: 300px; padding: 8px; margin-bottom: 16px; border: none;")

      .form-group
        label(for="gender", style="display: block; margin-bottom: 8px; color: #333;") Gender:
        input(type="text", name="gender", style="width: 80%; max-width: 300px; padding: 8px; margin-bottom: 16px; border: none;")

      .form-group
        label(for="phone", style="display: block; margin-bottom: 8px; color: #333;") Phone:
        input(type="text", name="phone", style="width: 80%; max-width: 300px; padding: 8px; margin-bottom: 16px; border: none;")

      .form-group
        label(for="address", style="display: block; margin-bottom: 8px; color: #333;") Address:
        input(type="text", name="address", style="width: 80%; max-width: 300px; padding: 8px; margin-bottom: 16px; border: none;")

      button(type="submit", style="background-color: #28A745; color: #fff; padding: 10px 20px; border: none; cursor: pointer;") Sign Up

    p(style="margin-top: 20px; color: #555;") Already have an account?
      a(href="/login", style="color: #007BFF;") Log In
